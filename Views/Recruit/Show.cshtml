        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(m => m.DeliveryDate, "Дата доставки", new {@class = "control-label"})
            @Html.TextBoxFor(m => m.DeliveryDate, "{0:dd.MM.yyyy}", new {@class = "form-control", disabled = "true"})
            @Html.ValidationMessageFor(m => m.DeliveryDate)
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(m => m.ConscriptionPeriod.Name, "Призыв", new {@class = "control-label"})
            @Html.TextBoxFor(m => m.ConscriptionPeriod.Name, new {@class = "form-control", disabled = "true"})
