        </div>

    </div>
    <hr>
    <h4>Место жительства</h4>
    <h5>Адрес места жительства (зарегистрирован)</h5>
    <div class="row">
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.ZRecruit.Settlement.Name, "Населенный пункт", new {@class = "control-label"})
            @Html.TextBoxFor(m => m.ZRecruit.Settlement.Name, new {@class = "form-control", disabled = "true"})
            @Html.ValidationMessageFor(m => m.ZRecruit.Settlement.Name)
        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(m => m.ZRecruit.AdditionalData.Street, "Улица", new {@class = "control-label"})
            @Html.TextBoxFor(m => m.ZRecruit.AdditionalData.Street, new {@class = "form-control", disabled = "true"})
            @Html.ValidationMessageFor(m => m.ZRecruit.AdditionalData.Street)
        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(m => m.ZRecruit.AdditionalData.House, "Дом", new {@class = "control-label"})
            @Html.TextBoxFor(m => m.ZRecruit.AdditionalData.House, new {@class = "form-control", disabled = "true"})
            @Html.ValidationMessageFor(m => m.ZRecruit.AdditionalData.House)
        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(m => m.ZRecruit.AdditionalData.Building, "Корпус", new {@class = "control-label"})
            @Html.TextBoxFor(m => m.ZRecruit.AdditionalData.Building, new {@class = "form-control", disabled = "true"})
            @Html.ValidationMessageFor(m => m.ZRecruit.AdditionalData.Building)
        </div>
        <div class="form-group col-md-2">
            @Html.LabelFor(m => m.ZRecruit.AdditionalData.Apartment, "Квартира", new {@class = "control-label"})
            @Html.TextBoxFor(m => m.ZRecruit.AdditionalData.Apartment, new {@class = "form-control", disabled = "true"})
            @Html.ValidationMessageFor(m => m.ZRecruit.AdditionalData.Apartment)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.ZRecruit.ActualAddress, "Фактический адрес", new {@class = "control-label h5"})
            @Html.TextBoxFor(m => m.ZRecruit.ActualAddress, new {@class = "form-control", disabled = "true"})
            @Html.ValidationMessageFor(m => m.ZRecruit.ActualAddress)
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(m => m.ZRecruit.HomePhone, "Домашний телефон", new {@class = "control-label h5"})
            @Html.TextBoxFor(m => m.ZRecruit.HomePhone, new {@class = "form-control", disabled = "true"})
            @Html.ValidationMessageFor(m => m.ZRecruit.HomePhone)
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(m => m.ZRecruit.MobilePhone, "Мобильный телефон", new {@class = "control-label h5"})
            @Html.TextBoxFor(m => m.ZRecruit.MobilePhone, new {@class = "form-control", disabled = "true"})
            @Html.ValidationMessageFor(m => m.ZRecruit.MobilePhone)
        </div>
    </div>
    <hr>
    <h4>Дактилоскопия</h4>
    <div class="row">
        <div class="form-group col-md-3">
            @Html.LabelFor(m => m.DactyloscopyStatus.Name, "Статус", new {@class = "control-label"})
            @Html.TextBoxFor(m => m.DactyloscopyStatus.Name, new {@class = "form-control", disabled = "true"})
            @Html.ValidationMessageFor(m => m.DactyloscopyStatus.Name)
        </div>
        @if (User.IsPermission(Permission.Dactyloscopy))
        {
            <div class="col-md-6 d-flex align-items-center justify-content-start">
                @if (Model.DactyloscopyStatusId != 1)
                {
                    <a class="btn btn-secondary mx-1"
                       asp-controller="Dactyloscopy" asp-action="EditDactyloscopyStatus"
                       asp-route-recruitId="@Model.Id" asp-route-editStatus="1">
                        <i class="fas fa-hourglass-half"></i> Не отработан
                    </a>
                }
                @if (Model.DactyloscopyStatusId != 2)
                {
                    <a class="btn btn-success mx-1"
                       asp-controller="Dactyloscopy" asp-action="EditDactyloscopyStatus"
                       asp-route-recruitId="@Model.Id" asp-route-editStatus="2">
                        <i class="fas fa-check"></i> Отработано
                    </a>
                }
                @if (Model.DactyloscopyStatusId != 3)
                {
                    <a class="btn btn-danger mx-1"
                       asp-controller="Dactyloscopy" asp-action="EditDactyloscopyStatus"
                       asp-route-recruitId="@Model.Id" asp-route-editStatus="3">
                        <i class="fas fa-user-times"></i> Отправлен ранее
                    </a>
                }
            </div>
            @if (!Model.ConscriptionPeriod.IsArchive)
            {
                <div class="col-md-3 d-flex align-items-center justify-content-start">
                    <a class="btn btn-danger"
                       asp-controller="Dactyloscopy" asp-action="PrintDactyloscopyCard"
                       asp-route-recruitId="@Model.Id">
                        <i class="fas fa-print"></i> Печать Дактокарты
                    </a>
                </div>
            }
        }
    </div>
        <hr>
