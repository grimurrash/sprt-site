        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(m => m.ZRecruit.FirstName, "Имя", new {@class = "control-label"})
            @Html.TextBoxFor(m => m.ZRecruit.FirstName, new {@class = "form-control", disabled = "true"})
