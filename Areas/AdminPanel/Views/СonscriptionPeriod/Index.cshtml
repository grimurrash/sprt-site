<section class="container">
    <h2>Админ панель</h2>
    <ul class="nav nav-pills mt-2">
        <li class="nav-item">
            <a class="nav-link " asp-area="AdminPanel" asp-controller="User" asp-action="Index">Управление пользователями</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="AdminPanel" asp-controller="Department" asp-action="Index">Управление отделениями</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" asp-area="AdminPanel" asp-controller="СonscriptionPeriod" asp-action="Index">Управление периодами призыва</a>
        </li>
    </ul>
</section>

<partial name="ViewComponents/_AlertSection"/>

<section class="container mt-4 ">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <h5>Всего периодов призыва: <b>@ViewData["conscriptionPeriodCount"]</b> чел.</h5>
        </div>
        <div class="col-lg-4 text-right">
            <a asp-area="AdminPanel" asp-controller="СonscriptionPeriod" asp-action="CreateModal" class="btn btn-success"
               onclick="showModal(event)" data-alert-text="Не удалось открыть окно добавления призыва">
                <i class="fas fa-user-plus"></i> Добавить призыв
            </a>
        </div>
    </div>
</section>

<section class="container mt-2">
    @Html.AjaxGrid(Url.Action("IndexGrid", new {exitMode = true}))
</section>

<div id="modalContainer"></div>